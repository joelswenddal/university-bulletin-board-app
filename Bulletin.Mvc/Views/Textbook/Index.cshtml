@using BulletinApp.Shared
@{
    ViewData["Title"] = "Textbook Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid text-center">
        
        <div class="row justify-content-center align-items-center">
            <h1 class="display-4" id="home-page-title">Amazon Textbook Search</h1>
        </div>
        <div class="row justify-content-center align-items-center">
            <hr class="style1"/>
        </div>
        <p id="subscript"><b>Looking for a textbook? Search Amazon right here!</b></p>
</div>
<div class="container-fluid mb-1 p-1">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-5 p-2 rounded" id="search-container">
            <form asp-action="Text" form-method="GET">
                <div class="form-group input-group">
                    <label class="control-label input-group">Enter a search term to find matching textbooks on Amazon</label>
                    <input class="form-control input-group rounded" name="searchTerm" placeholder="e.g.,'javascript'" />
                    <span class="input-group-button"><input type="submit" value="Search Amazon" class="btn btn-primary m-2" id="home-page-buttons" /></span>
                    <span class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-fluid mb-3 p-1">
    <div class="row justify-content-center">
        <div class="col-sm-5">
            <a class="btn btn-md" id="return-buttons" 
                asp-area="" asp-controller="Board" asp-action="Index">Return to Current Board</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
